---
import background from "../assets/splitpay.png";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Splitpay Google signin">
  <style>
    :root {
      --primary-color: #3245ff;
      --secondary-color: #6c7aeb;
      --accent-color: #00b894;
      --text-color: #333;
      --light-text-color: #666;
      --background-opacity: rgba(255, 255, 255, 0.95);
      --box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
      --border-radius: 12px;
      --button-radius: 8px;
      --font-family-base: "Inter", "Roboto", "Helvetica Neue", "Arial",
        sans-serif;
    }

    #background {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
      filter: blur(100px);
      opacity: 0.7;
    }

    #container {
      font-family: var(--font-family-base);
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      background: linear-gradient(
        135deg,
        var(--secondary-color) 0%,
        var(--primary-color) 100%
      );
    }

    main {
      width: 100%;
      display: flex;
      justify-content: center;
      padding: 2rem;
    }

    #hero {
      background: var(--background-opacity);
      border-radius: var(--border-radius);
      padding: 40px 30px;
      box-shadow: var(--box-shadow);
      max-width: 450px;
      text-align: center;
    }

    #hero-logo {
      width: 200px;
      border-radius: 50%;
      height: 200px;
      margin-bottom: 1.5rem;
      filter: drop-shadow(2px 2px 4px rgba(0, 0, 0, 0.384));
      transition: all 0.3s ease-in-out;
      cursor: context-menu;
    }
    #hero-logo:hover {
      transform: scale(1.05);
      filter: drop-shadow(2px 2px 4px rgba(0, 0, 0, 0.767));
    }
    h1 {
      font-size: 2.5rem;
      margin-bottom: 0.8rem;
      color: var(--primary-color);
      font-weight: 700;
    }

    .tagline {
      font-size: 1.2rem;
      margin-bottom: 2rem;
      color: var(--light-text-color);
    }

    .features {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1.5rem 1rem;
      margin-bottom: 2.5rem;
    }

    .feature-item {
      display: flex;
      align-items: center;
      gap: 0.8rem;
      color: var(--text-color);
      font-size: 1rem;
    }

    .feature-item svg {
      width: 24px;
      height: 24px;
      color: var(--accent-color);
    }
    a {
      text-decoration: none;
      display: inline-block;
      align-items: center;
    }
    #google-signin {
      display: flex;
      align-items: center;
      padding: 0.9rem 2.2rem;
      gap: 0.8rem;
      background: linear-gradient(90deg, #00ffc3 60%, #2563eb 100%);
      color: #222;
      font-weight: 600;
      font-size: 1.1rem;
      border: none;
      border-radius: var(--button-radius);
      cursor: pointer;
      box-shadow: 0 2px 12px rgba(0, 255, 195, 0.15);
      transition:
        background 0.3s,
        color 0.3s,
        transform 0.2s;
      outline: none;
    }

    #google-signin:hover,
    #google-signin:focus {
      background: linear-gradient(90deg, #fff 60%, #00ffc3 100%);
      color: #2563eb;
      transform: translateY(-2px) scale(1.03);
    }

    .google-icon {
      width: 1.5rem;
      height: 1.5rem;
      display: inline-block;
      align-items: center;
      text-align: center;
    }
    /* Responsive adjustments */
    @media (max-width: 600px) {
      #hero {
        padding: 30px 20px;
      }

      h1 {
        font-size: 2.2rem;
      }

      .tagline {
        font-size: 1.1rem;
        margin-bottom: 1.5rem;
      }

      .features {
        grid-template-columns: 1fr;
        gap: 1rem;
        margin-bottom: 2rem;
      }

      .feature-item {
        font-size: 0.95rem;
      }

      .get-started-button {
        padding: 12px 24px;
        font-size: 1rem;
      }
    }
  </style>

  <div id="container">
    <img id="background" src={background.src} alt="" fetchpriority="high" />
    <main>
      <section id="hero">
        <img src={background.src} alt="SpliitPay Logo" id="hero-logo" />
        <h1>Welcome to SpliitPay</h1>
        <p class="tagline">
          Effortlessly split bills and share expenses with friends and groups.
        </p>
        <div class="features">
          <div class="feature-item">
            <svg viewBox="0 0 24 24" fill="currentColor">
              <path
                fill-rule="evenodd"
                d="M12 2.25c-5.384 0-9.75 4.366-9.75 9.75s4.366 9.75 9.75 9.75 9.75-4.366 9.75-9.75S17.384 2.25 12 2.25zM12 7.5a2.25 2.25 0 100 4.5 2.25 2.25 0 000-4.5zM12 16.5a3.75 3.75 0 100-7.5 3.75 3.75 0 000 7.5z"
                clip-rule="evenodd"></path>
            </svg>
            <span>Create Expense Groups</span>
          </div>
          <div class="feature-item">
            <svg viewBox="0 0 24 24" fill="currentColor">
              <path
                fill-rule="evenodd"
                d="M12 2.25c-5.384 0-9.75 4.366-9.75 9.75s4.366 9.75 9.75 9.75 9.75-4.366 9.75-9.75S17.384 2.25 12 2.25zM9.75 9a.75.75 0 00-1.5 0v4.5a.75.75 0 101.5 0V9zm4.5 0a.75.75 0 00-1.5 0v4.5a.75.75 0 101.5 0V9zm3.75 3.75a.75.75 0 10-1.5 0v.75a.75.75 0 101.5 0v-.75z"
                clip-rule="evenodd"></path>
            </svg>
            <span>Split Bills Easily</span>
          </div>
          <div class="feature-item">
            <svg viewBox="0 0 24 24" fill="currentColor">
              <path
                d="M12 15a3 3 0 100-6 3 3 0 000 6zm0-8a5 5 0 015 5 5 5 0 01-4.97 4.97l-2.516 1.258a.75.75 0 01-.968-.233l-2.516-1.258A5 5 0 017 10a5 5 0 015-5z"
              ></path>
            </svg>
            <span>Track Balances</span>
          </div>
        </div>
        <a href="./" class="get-started-button">
          <button id="google-signin">
            <span class="google-icon">
              <!-- Google G icon SVG -->
              <svg viewBox="0 0 24 24" width="24" height="24">
                <g>
                  <path
                    fill="#4285F4"
                    d="M21.805 10.023h-9.18v3.955h5.262c-.226 1.17-1.36 3.43-5.262 3.43-3.167 0-5.75-2.62-5.75-5.858s2.583-5.858 5.75-5.858c1.805 0 3.017.77 3.71 1.43l2.54-2.47C18.09 3.77 16.21 2.75 14 2.75 8.89 2.75 4.75 6.89 4.75 12s4.14 9.25 9.25 9.25c5.34 0 8.86-3.75 8.86-9.03 0-.61-.07-1.07-.16-1.47z"
                  ></path>
                  <path
                    fill="#34A853"
                    d="M12.625 21.25c2.43 0 4.47-.8 5.96-2.18l-2.84-2.32c-.79.53-1.8.85-3.12.85-2.4 0-4.44-1.62-5.17-3.8H4.59v2.39C6.08 19.13 9.09 21.25 12.625 21.25z"
                  ></path>
                  <path
                    fill="#FBBC05"
                    d="M7.455 13.8a5.93 5.93 0 0 1 0-3.6V7.81H4.59a9.25 9.25 0 0 0 0 8.38l2.865-2.39z"
                  ></path>
                  <path
                    fill="#EA4335"
                    d="M12.625 6.92c1.32 0 2.5.45 3.43 1.34l2.57-2.5C17.09 4.13 15.05 3.25 12.625 3.25c-3.535 0-6.545 2.12-8.035 5.19l2.865 2.39c.73-2.18 2.77-3.8 5.17-3.8z"
                  ></path>
                </g>
              </svg>
            </span>
            Sign in with Google
          </button></a
        >
      </section>
    </main>
  </div>
</Layout>
