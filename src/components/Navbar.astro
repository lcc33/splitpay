<style>
  :root {
    --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    --secondary-gradient: linear-gradient(135deg, #ff6b6b 0%, #feca57 100%);
    --accent-gradient: linear-gradient(135deg, #48dbfb 0%, #0abde3 100%);
    --text-dark: #2c3e50;
    --text-medium: #34495e;
    --text-light: #7f8c8d;
    --text-white: #ffffff;
    --background-white: #ffffff;
    --background-light: #f8fafc;
    --border-color: rgba(255, 255, 255, 0.2);
    --shadow-light: 0 2px 20px rgba(0, 0, 0, 0.08);
    --shadow-medium: 0 4px 25px rgba(0, 0, 0, 0.12);
    --border-radius: 12px;
    --transition: all 0.2s ease;
  }

  .navbar {
    background: var(--background-white);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    position: fixed;
    width: 100%;
    top: 0;
    z-index: 1000;
    box-shadow: var(--shadow-light);
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 75px;
  }

  .logo {
    font-weight: 800;
    font-size: 1.8rem;
    background: var(--primary-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-decoration: none;
    letter-spacing: -0.5px;
    transition: var(--transition);
    position: relative;
    font-family: "Lucida Sans", "Lucida Sans Regular", "Lucida Grande",
      "Lucida Sans Unicode", Geneva, Verdana, sans-serif;
  }

  .logo::after {
    content: "";
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 3px;
    background: var(--secondary-gradient);
    border-radius: 2px;
    transition: width 0.3s ease;
  }

  .logo:hover::after {
    width: 100%;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-link {
    text-decoration: none;
    color: var(--text-medium);
    font-weight: 900;
    font-size: 1rem;
    font-family: "Gill Sans", "Gill Sans MT", Calibri, "Trebuchet MS",
      sans-serif;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    transition: var(--transition);
    position: relative;
  }

  .nav-link::after {
    content: "";
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 3px;
    background: var(--secondary-gradient);
    border-radius: 2px;
    transition: width 0.3s ease;
  }

  .nav-link:hover::after {
    width: 100%;
  }
  /* Button Styles */

  .logout-btn {
    color: #e74c3c;
    font-weight: 600;
  }

  .logout-btn:hover {
    background: rgba(231, 76, 60, 0.1);
    color: #c0392b;
  }

  /* Mobile Navigation */
  .nav-toggle {
    display: none;
  }

  .nav-toggle-label {
    display: none;
    cursor: pointer;
    width: 40px;
    height: 40px;
    justify-content: center;
    align-items: center;
    border-radius: 8px;
    background: var(--background-light);
    transition: var(--transition);
  }

  .nav-toggle-label:hover {
    background: rgba(102, 126, 234, 0.1);
  }

  .hamburger-icon,
  .hamburger-icon::before,
  .hamburger-icon::after {
    display: block;
    background: var(--text-dark);
    height: 3px;
    width: 24px;
    border-radius: 2px;
    position: absolute;
    transition: var(--transition);
  }

  .hamburger-icon::before,
  .hamburger-icon::after {
    content: "";
  }

  .hamburger-icon::before {
    top: -8px;
  }

  .hamburger-icon::after {
    top: 8px;
  }

  /* Mobile Styles */
  @media (max-width: 900px) {
    .container {
      padding: 0 1.5rem;
      height: 65px;
    }

    .logo {
      font-size: 1.6rem;
    }

    .nav-links {
      position: fixed;
      top: 65px;
      left: 0;
      right: 0;
      background: var(--background-white);
      flex-direction: column;
      align-items: stretch;
      gap: 0;
      padding: 2rem 0;
      transform: translateX(100%);
      transition: transform 0.3s ease;
      box-shadow: var(--shadow-medium);
      max-height: calc(100vh - 65px);
      overflow-y: auto;
    }

    .nav-links li {
      width: 100%;
    }

    .nav-links .nav-link {
      margin: 0 auto;
      text-align: center;
      padding: 1rem 2rem;
      font-size: 1.1rem;
      border-radius: 0;
      width: 50%;
      display: block;
    }
    .nav-links .btn-signup {
      margin-bottom: 0.7rem;
      margin-top: 1rem;
      text-align: center;
      border-radius: var(--border-radius);
    }

    .nav-toggle-label {
      display: flex;
    }

    .nav-toggle:checked ~ .nav-toggle-label .hamburger-icon {
      background: transparent;
    }

    .nav-toggle:checked ~ .nav-toggle-label .hamburger-icon::before {
      transform: rotate(45deg) translate(6px, 6px);
    }

    .nav-toggle:checked ~ .nav-toggle-label .hamburger-icon::after {
      transform: rotate(-45deg) translate(6px, -6px);
    }

    .nav-toggle:checked ~ .nav-links {
      transform: translateX(0);
    }
  }

  @media (max-width: 480px) {
    .container {
      padding: 0 1rem;
    }

    .logo {
      font-size: 1.4rem;
    }

    .nav-links .nav-link {
      padding: 0.9rem 1.5rem;
      font-size: 1rem;
    }
  }
</style>

<nav class="navbar">
  <div class="container">
    <a href="./" class="logo">SplitPay</a>
    <input
      type="checkbox"
      id="nav-toggle"
      class="nav-toggle"
      aria-label="Toggle navigation menu"
    />
    <label for="nav-toggle" class="nav-toggle-label">
      <span class="hamburger-icon"></span>
    </label>
    <ul class="nav-links">
      <li>
        <a href="./" class="nav-link omo"> Home </a>
      </li>
      <li>
        <a href="/features" class="nav-link omo"> Features </a>
      </li>
      <li>
        <a href="/how-it-works" class="nav-link omo"> How It Works </a>
      </li>
    </ul>
  </div>
</nav>
