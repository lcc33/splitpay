---
const { user } = Astro.props;
---

<style>
  :root {
    --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    --secondary-gradient: linear-gradient(135deg, #ff6b6b 0%, #feca57 100%);
    --accent-gradient: linear-gradient(135deg, #48dbfb 0%, #0abde3 100%);
    --text-dark: #2c3e50;
    --text-medium: #34495e;
    --text-light: #7f8c8d;
    --text-white: #ffffff;
    --background-white: #ffffff;
    --background-light: #f8fafc;
    --border-color: rgba(255, 255, 255, 0.2);
    --shadow-light: 0 2px 20px rgba(0, 0, 0, 0.08);
    --shadow-medium: 0 4px 25px rgba(0, 0, 0, 0.12);
    --border-radius: 12px;
    --transition: all 0.2s ease;
  }

  .navbar {
    background: var(--background-white);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    position: sticky;
    top: 0;
    z-index: 1000;
    box-shadow: var(--shadow-light);
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 75px;
  }

  .logo {
    font-weight: 800;
    font-size: 1.8rem;
    background: var(--primary-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-decoration: none;
    letter-spacing: -0.5px;
    transition: var(--transition);
    position: relative;
  }

  .logo::after {
    content: "";
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 3px;
    background: var(--secondary-gradient);
    border-radius: 2px;
    transition: width 0.3s ease;
  }

  .logo:hover::after {
    width: 100%;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-link {
    text-decoration: none;
    color: var(--text-medium);
    font-weight: 500;
    font-size: 1rem;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    transition: var(--transition);
    position: relative;
  }

  .nav-link:hover {
    color: var(--text-dark);
    background: var(--background-light);
  }

  /* Button Styles */
  .btn-login,
  .btn-signup {
    padding: 0.7rem 1.5rem;
    border-radius: var(--border-radius);
    font-weight: 600;
    font-size: 0.95rem;
    text-decoration: none;
    transition: var(--transition);
    border: 2px solid transparent;
    position: relative;
    overflow: hidden;
  }

  .btn-login {
    color: var(--text-dark);
    border: 2px solid #e2e8f0;
    background: var(--background-white);
  }

  .btn-login:hover {
    border-color: #667eea;
    color: #667eea;
    transform: translateY(-1px);
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.2);
  }

  .btn-signup {
    background: var(--primary-gradient);
    color: var(--text-white);
    margin-left: 0.5rem;
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
  }

  .btn-signup:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 25px rgba(102, 126, 234, 0.4);
  }

  /* Avatar Dropdown */
  .avatar-dropdown {
    position: relative;
    margin-left: 1rem;
  }

  .avatar-toggle {
    display: none;
  }

  .avatar-label {
    display: flex;
    align-items: center;
    cursor: pointer;
    padding: 0.5rem 1rem;
    border-radius: 50px;
    background: var(--background-light);
    border: 2px solid rgba(102, 126, 234, 0.1);
    transition: var(--transition);
  }

  .avatar-label:hover {
    background: rgba(102, 126, 234, 0.05);
    border-color: rgba(102, 126, 234, 0.2);
  }

  .avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid transparent;
    background: var(--primary-gradient);
    padding: 2px;
    margin-right: 12px;
  }

  .avatar-name {
    font-weight: 600;
    color: var(--text-dark);
    font-size: 0.95rem;
    margin-right: 8px;
  }

  .dropdown-arrow {
    width: 16px;
    height: 16px;
    color: var(--text-light);
    transition: transform 0.2s ease;
  }

  .avatar-toggle:checked + .avatar-label .dropdown-arrow {
    transform: rotate(180deg);
  }

  .dropdown {
    display: none;
    position: absolute;
    right: 0;
    top: calc(100% + 12px);
    background: var(--background-white);
    border: 1px solid rgba(0, 0, 0, 0.08);
    border-radius: var(--border-radius);
    min-width: 200px;
    box-shadow: var(--shadow-medium);
    padding: 0.5rem 0;
    opacity: 0;
    transform: translateY(-10px);
    transition:
      opacity 0.2s ease,
      transform 0.2s ease;
  }

  .avatar-toggle:checked ~ .dropdown {
    display: block;
    opacity: 1;
    transform: translateY(0);
  }

  .dropdown li {
    list-style: none;
  }

  .dropdown-link {
    display: block;
    padding: 0.75rem 1.5rem;
    color: var(--text-medium);
    text-decoration: none;
    font-size: 0.95rem;
    font-weight: 500;
    transition: var(--transition);
  }

  .dropdown-link:hover {
    background: var(--background-light);
    color: var(--text-dark);
  }

  .dropdown-divider {
    height: 1px;
    background: rgba(0, 0, 0, 0.08);
    margin: 0.5rem 0;
  }

  .logout-btn {
    color: #e74c3c;
    font-weight: 600;
  }

  .logout-btn:hover {
    background: rgba(231, 76, 60, 0.1);
    color: #c0392b;
  }

  /* Mobile Navigation */
  .nav-toggle {
    display: none;
  }

  .nav-toggle-label {
    display: none;
    cursor: pointer;
    width: 40px;
    height: 40px;
    justify-content: center;
    align-items: center;
    border-radius: 8px;
    background: var(--background-light);
    transition: var(--transition);
  }

  .nav-toggle-label:hover {
    background: rgba(102, 126, 234, 0.1);
  }

  .hamburger-icon,
  .hamburger-icon::before,
  .hamburger-icon::after {
    display: block;
    background: var(--text-dark);
    height: 3px;
    width: 24px;
    border-radius: 2px;
    position: absolute;
    transition: var(--transition);
  }

  .hamburger-icon::before,
  .hamburger-icon::after {
    content: "";
  }

  .hamburger-icon::before {
    top: -8px;
  }

  .hamburger-icon::after {
    top: 8px;
  }

  /* Mobile Styles */
  @media (max-width: 900px) {
    .container {
      padding: 0 1.5rem;
      height: 65px;
    }

    .logo {
      font-size: 1.6rem;
    }

    .nav-links {
      position: fixed;
      top: 65px;
      left: 0;
      right: 0;
      background: var(--background-white);
      flex-direction: column;
      align-items: stretch;
      gap: 0;
      padding: 2rem 0;
      transform: translateX(100%);
      transition: transform 0.3s ease;
      box-shadow: var(--shadow-medium);
      max-height: calc(100vh - 65px);
      overflow-y: auto;
    }

    .nav-links li {
      width: 100%;
    }

    .nav-links .nav-link {
      padding: 1rem 2rem;
      font-size: 1.1rem;
      border-radius: 0;
      width: 100%;
      display: block;
    }

    .nav-links .btn-login,
    .nav-links .btn-signup {
      margin: 0.5rem 2rem;
      text-align: center;
      border-radius: var(--border-radius);
    }

    .nav-links .btn-signup {
      margin-left: 2rem;
    }

    .nav-toggle-label {
      display: flex;
    }

    .nav-toggle:checked ~ .nav-toggle-label .hamburger-icon {
      background: transparent;
    }

    .nav-toggle:checked ~ .nav-toggle-label .hamburger-icon::before {
      transform: rotate(45deg) translate(6px, 6px);
    }

    .nav-toggle:checked ~ .nav-toggle-label .hamburger-icon::after {
      transform: rotate(-45deg) translate(6px, -6px);
    }

    .nav-toggle:checked ~ .nav-links {
      transform: translateX(0);
    }

    .avatar-dropdown {
      width: 100%;
      margin: 1rem 0 0 0;
      padding-top: 1rem;
      border-top: 1px solid rgba(0, 0, 0, 0.08);
    }

    .avatar-label {
      margin: 0 2rem;
      padding: 1rem;
      border-radius: var(--border-radius);
    }

    .dropdown {
      position: static;
      box-shadow: none;
      border: none;
      background: var(--background-light);
      margin: 0 2rem;
      border-radius: var(--border-radius);
      margin-top: 0.5rem;
    }

    .dropdown-link {
      padding: 0.75rem 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .container {
      padding: 0 1rem;
    }

    .logo {
      font-size: 1.4rem;
    }

    .nav-links .nav-link {
      padding: 0.9rem 1.5rem;
      font-size: 1rem;
    }

    .nav-links .btn-login,
    .nav-links .btn-signup {
      margin: 0.5rem 1.5rem;
    }

    .nav-links .btn-signup {
      margin-left: 1.5rem;
    }

    .avatar-label {
      margin: 0 1.5rem;
    }

    .dropdown {
      margin: 0 1.5rem;
    }
  }
</style>

<nav class="navbar">
  <div class="container">
    <a href="/Home" class="logo">SpliitPay</a>
    <input
      type="checkbox"
      id="nav-toggle"
      class="nav-toggle"
      aria-label="Toggle navigation menu"
    />
    <label for="nav-toggle" class="nav-toggle-label">
      <span class="hamburger-icon"></span>
    </label>
    <ul class="nav-links">
      <li>
        <a href="/" class="nav-link"> Home </a>
      </li>
      <li>
        <a href="/features" class="nav-link"> Features </a>
      </li>
      <li>
        <a href="/how-it-works" class="nav-link"> How It Works </a>
      </li>
      <li>
        <a href="/login" class="nav-link btn-login"> Login </a>
      </li>
      <li>
        <a href="/signup" class="nav-link btn-signup"> Sign Up </a>
      </li>
    </ul>
    ) }
  </div>
</nav>
